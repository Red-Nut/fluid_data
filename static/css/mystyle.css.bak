/* Colors */
:root {
    --base-color:#0d8c13;
    --light-color:#44EE4D;
    --warning-color:#FEA520;
    --error-color:#C51B29;
    --grey-color:#4B543B;
}
.c-base {
    color: var(--base-color);
}
.c-light {
    color: var(--light-color);
}
.c-warning {
    color: var(--warning-color);
}
.c-error {
    color: var(--error-color);
}
.c-grey {
    color: var(--grey-color);
}

/*Affects the whole document */
html,
body {
    margin: 0;

    font-family: Arial, Helvetica, sans-serif, Verdana, Geneva, Tahoma, sans-serif;
}

/* main body of page - excludes the navigation bar */
#main-body {
    margin: 12px;
    margin-top: 170px;
    max-width: 100%;
}

/* remove link formatting */
a {
    color: black;
    text-decoration: none;
}
a:hover{
    color: black;
    text-decoration:none;
}

/* navbar */
.navbar{
    background-color: var(--base-color);
    padding-left: 24px;
    padding-right: 24px;
}

/* Inserting this collapsed row between two flex items will make 
 * the flex item that comes after it break to a new row */
.break {
    flex-basis: 100%;
    height: 0;
  }

/* stop rows from growing beyond the width of the page. Appears to be a result of adding the 12px margin to #main-body */
.row{
    max-width:100%;
}

/* Add margin to bottom of all card columns */
.card {
    margin-bottom: 12px;
}

/* Button styling*/
.btn-primary{
    background-color: var(--base-color);
    border-color:var(--light-color);
}
.btn-primary:hover{
    background-color: var(--light-color);
    border-color:var(--base-color);
}

/* Checkbox styling */
.form-check-input:checked{
    background-color: var(--base-color);
}

/* Make all borders using the .border class thicker */
.border{
    border-width: 2px !important;
}
/* Set the color of the borders */
.border-color{
    border-color: #ff9532 !important;
}

/* Search Page */
.attachment-table td{
    padding: 4px;
    border: lightgrey solid 1px;
}


